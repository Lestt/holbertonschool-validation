name: module3_task0
run-name: ${{ github.actor }} is learning GitHub Actions
on:
	push
	schedule:
		- cron: '0 15 * * *'

jobs:
	build:
	runs-on: ubuntu:18.04
		 steps:
			- name: Clone the repo
			  uses: actions/checkout@v3
			- name: Cd in the correct directory
			  run: cd ${{ github.workflow }}
			- name: Run hlp target from Makefile
			  run: make help
